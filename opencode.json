{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "no-thinker": {
      "model": "zai-coding-plan/glm-4.6",
      "thinkingType": "disabled",
    }
  },
  "lsp": {
    "php intelephense": {
      "command": [
        "intelephense",
        "--stdio"
      ],
      "extensions": [
        ".php"
      ]
    }
  },
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "command": ["php", "./artisan", "boost:mcp"],
      "enabled": true
    }
  },
  "formatter": {
    "php": {
      "command": ["./.opencode/format.sh", "$FILE"],
      "extensions": [".php"]
    },
  }
}
